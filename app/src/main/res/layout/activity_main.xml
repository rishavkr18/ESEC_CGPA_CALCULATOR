<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cgpa_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/gpa"
                android:textColor="#FF0000"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.572"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.06" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/esec" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/akaya_telivigala"
                    android:gravity="center"
                    android:text="ERODE SENGUNTHAR ENGINEERING COLLEGE"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/r"
                    tools:layout_editor_absoluteX="276dp"
                    tools:layout_editor_absoluteY="91dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Enter your number of Grades"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/o"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/armata"
                    android:text="O   "
                    android:textColor="#9910A3"
                    android:textSize="48sp" />

                <EditText
                    android:id="@+id/o_edtxt"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:minWidth="50dp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/aplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/armata"
                        android:text="A+  "
                        android:textColor="#9910A3"
                        android:textSize="48sp" />

                    <EditText
                        android:id="@+id/aplus_edtxt"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:background="@drawable/btn"
                        android:padding="5dp"
                        android:textSize="34sp"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:maxLength="2"
                        android:minWidth="50dp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/armata"
                    android:text="A   "
                    android:textColor="#9910A3"
                    android:textSize="48sp" />

                <EditText
                    android:id="@+id/a_edtxt"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textColor="#000000"
                    android:minWidth="50dp"
                    android:background="@drawable/btn"
                    android:padding="5dp"
                    android:textSize="34sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/armata"
                        android:text="B+  "
                        android:textColor="#9910A3"
                        android:textSize="48sp" />

                    <EditText
                        android:id="@+id/bplus_edtxt"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="number"
                        android:background="@drawable/btn"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:textSize="34sp"
                        android:maxLength="2"
                        tools:ignore="SpeakableTextPresentCheck" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/armata"
                    android:text="B   "
                    android:textColor="#9910A3"
                    android:textSize="48sp" />

                <EditText
                    android:id="@+id/b_edtxt"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="2"
                    android:background="@drawable/btn"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:textSize="34sp"
                    android:minWidth="50dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>

            <Button
                android:id="@+id/result"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn1"
                android:onClick="result"
                android:text="Get GPA"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>